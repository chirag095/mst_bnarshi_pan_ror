<style type="text/css">
   #onebitesmenuleft a {
    text-decoration: none;
    padding: 10px;
    display: inline-block;
    position: relative;
}

/* Dropdown container */
.dropdown {
    position: relative;
    display: inline-block;
}

/* Dropdown menu */
.dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #000000;
    padding: 10px;
    border: 1px solid #ddd;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    z-index: 10;
}

/* Dropdown menu items */
.dropdown-menu a {
    display: block;
    padding: 8px 12px;
    white-space: nowrap;
}

/* Show the dropdown menu on hover */
.dropdown:hover .dropdown-menu {
    display: block;
}

/* Styling for hover effect */
.dropdown-menu a:hover {
    background-color: #f0f0f0;
}
</style>
