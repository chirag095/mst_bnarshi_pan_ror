<script type="text/javascript">
   function isMobile() {
    return window.innerWidth <= 768; // Check if the screen width is for mobile
   }
   
   function showBtn() {
    if (isMobile()) {
        document.getElementById("obdpmenusix").style.display = "block"; 
        document.getElementById("menubutton").style.display = "none";  
        document.getElementById("closebutton").style.display = "block";  
    }
   }
   
   function closeBtn() {
    if (isMobile()) {
        document.getElementById("obdpmenusix").style.display = "none"; 
        document.getElementById("menubutton").style.display = "block";  
        document.getElementById("closebutton").style.display = "none";  
    }
   }
   
</script>
