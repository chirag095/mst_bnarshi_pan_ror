<style>
/* General Styles */
bodygood {
    font-family: Arial, sans-serif;
    text-align: center;
    margin: 0;
    padding: 0;
}

/* Button to open the modal */
#openModalBtn {
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    cursor: pointer;
    font-size: 16px;
    border-radius: 5px;
    transition: transform 0.2s, box-shadow 0.2s;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
}

#openModalBtn:hover {
    background-color: #0056b3;
    transform: scale(1.05);
    box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.3);
}

/* Modal Styles */
.modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
}

/* Modal Content - 3D Effect */
.modal-content {
    background-color: white;
    width: 80%;
    max-width: 700px;
    margin: 23vh auto;
    padding: 1px;
    border-radius: 8px;
    position: relative;
    transform: perspective(1000px) rotateX(5deg) rotateY(5deg);
    box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.3);
    transition: transform 0.5s ease-out;
    animation: fadeIn 0.5s;
}

.modal-content:hover {
    transform: perspective(1000px) rotateX(0deg) rotateY(0deg) scale(1.02);
}

/* Close Button */
.close {
    position: absolute;
    top: -1px;
    right: 18px;
    font-size: 46px;
    cursor: pointer;
    transition: transform 0.2s;
}

.close:hover {
    color: red;
    transform: scale(1.2);
}

/* Modal Body (Flexbox for Layout) */
.modal-body {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 5px;
}

/* Image Section */
.modal-image {
    flex: 1;
    max-width: 50%;
    transform: perspective(1000px) rotateY(-5deg);
    transition: transform 0.3s;
}

.modal-image img {
    width: 95%;
    height: 100%;
    max-height: 400px;
    object-fit: cover;
    border-radius: 8px 0 0 8px;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
}

.modal-image:hover {
    transform: perspective(1000px) rotateY(0deg) scale(1.05);
}

/* Form Section */
.modal-form {
    flex: 1;
    padding: 1px;
    text-align: left;
}

.modal-form h2 {
    margin-bottom: 15px;
    font-size: 20px;
}

/* 3D Form Fields */
.modal-form input,
.modal-form textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 14px;
    box-shadow: inset 2px 2px 5px rgba(0, 0, 0, 0.1);
    transition: all 0.2s;
}

.modal-form input:focus,
.modal-form textarea:focus {
    box-shadow: inset 0px 0px 10px rgba(0, 0, 0, 0.2);
    transform: scale(1.02);
}

/* 3D Submit Button */
.modal-form button {
    width: 100%;
    padding: 12px;
    background-color: #28a745;
    color: white;
    border: none;
    cursor: pointer;
    font-size: 16px;
    border-radius: 5px;
    transition: transform 0.3s, box-shadow 0.3s;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
}

.modal-form button:hover {
    background-color: #218838;
    transform: scale(1.05);
    box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.3);
}



/* Responsive Design */
@media screen and (max-width: 768px) {
    .modal-content {
        width: 92%;
    }

    .modal-body {
        flex-direction: column;
        gap: 10px;
    }

    .modal-image {
        max-width: 77%;
    }

    .modal-image img {
        width: 100%;
        height: auto;
        border-radius: 8px 8px 0 0;
    }

    .modal-content {
        transform: perspective(500px) rotateX(3deg);
    }
}


</style>
<bodygood>

    <!-- Button to Open Modal -->
   

    <!-- Popup Modal -->
    <div id="modal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div class="modal-body">
                <!-- Left Side Image -->
                <div class="modal-image">
                    <img src="/assets/poup.jpeg" alt="Side Image" width="300" height="200">
                </div>

                <!-- Right Side Form -->
                <div class="modal-form">
